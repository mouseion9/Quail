\def\heading#1{\vspace*{3mm} \noindent { #1} \par}
\def\beginhang#1{ \heading{#1}
\begingroup
                \clubpenalty=10000
                \widowpenalty=10000
                \normalbaselines\parindent 0pt 
                \parskip.5\baselineskip
                \everypar{\hangindent3em}}
\def\endhang{\par\endgroup}
